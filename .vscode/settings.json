{
    // To remove the unwanted yellow alerts for importing init file when working on a certain level
    // You may change it to the level you are working on
    "python.autoComplete.extraPaths": ["./Level3", "./Solutions/Level3"] ,
    "python.linting.pylintArgs": [
        "--extension-pkg-whitelist=pygame"
    ],
    "python.linting.enabled": false
    // Note: if you need to set your python path, set it in user settings, not here.
    // To do this, press Ctrl+Shift+P (or Command+Shift+P on macOS) and type "Settings"
    // and choose "Preferences: Open Settings (JSON)". Then add the python path there
    // for example: "python.pythonPath": "/usr/local/opt/python@3.8/bin/python3.8"
}
